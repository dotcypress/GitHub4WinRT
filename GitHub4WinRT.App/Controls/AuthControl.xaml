<UserControl x:Class="GitHub4WinRT.App.Controls.AuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="0,0,60,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Height="50"
                Width="50"
                Grid.RowSpan="2">
            <Image Source="{Binding AvatarUrl}" Stretch="UniformToFill" />
        </Border>
        <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12,0,0,6" FontSize="20" />
        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Email}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12,0,0,0" FontSize="18" />
    </Grid>
</UserControl>